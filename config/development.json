{
    
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },

    "view engines": {
        "dust": {
            "module": "engine-munger",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": false },
                    {
                        "views": "config:express.views",
                        "view engine": "config:express.view engine",
                        "specialization": "config:specialization",
                        "i18n": "config:i18n"
                    }
                ]
            }
        }
    },

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {   
                        "template": {
                            "module": "kraken-devtools/plugins/dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates",
                            "i18n": "config:i18n"
                        },
                        "stylus": {
                            "module": "path:./lib/stylus",
                            "files": "/css/**/*.css",
                            "ext": "styl"
                        }, 
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        },
                        "browserify": {
                            "module": "kraken-devtools-browserify",
                            "files": "/js/**/*.js"
                        }
                    }
                ]
            }
        }
    },

    "integrations": {
        "openFDA": {
            "apiKey": "fWo3VYTbToPaLcFem1T9ZJqqNHNmetmU3peGa1BF",
            "hostname": "api.fda.gov",
            "endpoints": {
                "drug": {
                    "label": "/drug/label.json",
                    "event": "/drug/event.json",
                    "enforcement": "/drug/enforcement"
                },
                "device": {
                    "event": "/device/event.json",
                    "enforcement": "/device/enforcement"
                },
                "food": {
                    "enforcement": "/food/enforcement"
                }
            }
        } 
    }
}
